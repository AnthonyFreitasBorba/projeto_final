<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_background"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="32dp"
    android:paddingRight="32dp"
    tools:context=".Activities.LoginActivity">

    <TextView
        android:id="@+id/textViewAppNameLogin"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/text_me_one"
        android:text="@string/app_name_login"
        android:textSize="36sp" />

    <EditText
        android:id="@+id/editTextEmailLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/background_text"
        android:drawableLeft="@drawable/baseline_email_24"
        android:drawablePadding="6dp"
        android:ems="10"
        android:hint="@string/email_login"
        android:inputType="text|textWebEmailAddress"
        android:padding="10dp"
        android:textColor="#FDF8FB"
        android:textColorHint="#f6f0f2" />

    <EditText
        android:id="@+id/editTextSenhaLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@drawable/background_text"
        android:drawableLeft="@drawable/baseline_password_24"
        android:drawablePadding="6dp"
        android:ems="10"
        android:hint="@string/password_login"
        android:inputType="text|textWebPassword"
        android:padding="10dp"
        android:textColor="#FDF8FB"
        android:textColorHint="#f6f0f2" />

    <Button
        android:id="@+id/botao_faz_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/botao_login" />

    <Button
        android:id="@+id/botao_cadastre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingTop="4dp"
        android:text="@string/botao_cadastre" />

</LinearLayout>